<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_calls"
        android:name="com.dejvileka.whatsapp.ui.calls.CallsFragment"
        android:label="Calls"
        tools:layout="@layout/fragment_calls" />

    <fragment
        android:id="@+id/navigation_status"
        android:name="com.dejvileka.whatsapp.ui.status.StatusFragment"
        android:label="Status"
        tools:layout="@layout/fragment_status" />

    <fragment
        android:id="@+id/navigation_chats"
        android:name="com.dejvileka.whatsapp.ui.chats.ChatsFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chats" />
    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.dejvileka.whatsapp.ui.camera.CameraFragment"
        android:label="Camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.dejvileka.whatsapp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>